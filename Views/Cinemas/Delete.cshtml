@model CinemaModel
@{
    ViewData["Title"] = "Delete Cinema";
}


<div class="row">
    <div class="bg-light col-md-8 offset-2">
        <p>
            <h1 class="offset-3"><i class="bi bi-trash-circle"></i>Delete @Model.Name? </h1>
        </p>
        <div class="offset-1 row bg-dark" style="max-width: 800px;">
            <div class="col-md-12">
                <div class="form-group">
                    <img id="LogoPreview" class="border border-10" style="max-height: 100px; max-width:100px" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label text-white"></label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label text-white"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label text-white"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var Output = document.getElementById('LogoPreview');
            Output.src = $("#Logo").val();
        })
        $('#Logo').on('change', function () {
            var Output = document.getElementById('LogoPreview');
            Output.src = $(this).val();
        })
    </script>

}