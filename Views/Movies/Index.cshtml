@model IEnumerable<MovieModel>
@{
    ViewData["Title"] = "List of Movies";
}

<div class="row bg-dark">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 450px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Html.DisplayFor(m => item.Name)
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@Html.DisplayFor(m => item.ImageURL)" alt="@Html.DisplayFor(m => item.Name)" style="width: 220px; height: 300px" />
                    </div>
                    <div class="col-md-6">
                        <p class="card-text"><b>@Html.DisplayFor(m => item.Description)</b></p>
                        <p class="card-text">Cinema : @Html.DisplayFor(m => item.Cinema.Name)</p>
                        <p class="card-text">Genre : @Html.DisplayFor(m => item.Genre)</p>
                        <p class="card-text">Rating : @Html.DisplayFor(m => item.Rating)</p>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to Watchlist</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>